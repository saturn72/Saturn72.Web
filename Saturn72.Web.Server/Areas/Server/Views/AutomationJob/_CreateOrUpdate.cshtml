
@model AutomationJobModel
@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<script>
    $(document).ready(function () {
        $("#automation-job-edit").kendoTabStrip({
            animation: {
                open: {
                    effects: "fadeIn"
                }
            },
            select: tabstrip_on_tab_select
        });
    });
</script>
<div id="automation-job-edit">
    <ul>
        <li @Html.RenderSelectedTabIndex(0, GetSelectedTabIndex())>
            @T("Automation.AutomationJob.Details")
        </li>
        <li @Html.RenderSelectedTabIndex(1, GetSelectedTabIndex())>
            @T("Automation.AutomationJob.Platforms")
        </li>
        <li @Html.RenderSelectedTabIndex(2, GetSelectedTabIndex())>
            @T("Automation.AutomationJob.Parameters")
        </li>
    </ul>

    <div>
        @TabInfo()
    </div>
    <div>
        @TabPlatforms()
    </div>
    <div>
        @TabParameters()
    </div>
</div>

@*save selected tab index*@
<input type="hidden" id="selected-tab-index" name="selected-tab-index" value="@(GetSelectedTabIndex())">

@helper TabInfo()
{
    @Html.Partial("_CreateOrUpdate.Info", Model)
}

@helper TabPlatforms()
{
    @Html.Partial("_CreateOrUpdate.Platforms", Model)
}
@helper TabParameters()
{
    @Html.Partial("_CreateOrUpdate.Parameters", Model)
}